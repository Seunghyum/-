{
  "plugins": ["prettier"],
  "extends": ["eslint:recommended", "plugin:prettier/recommended"],
  "env": {
      "browser": true,
      "es6": true,
      "node": true
  },
  "ignorePatterns": ["node_modules/", "test/", "*.spec.js"],
  "rules": {
    "prettier/prettier": "error"
  },
  "parserOptions": {
      "ecmaVersion": 2017,
      "sourceType": "module"
  }
}
